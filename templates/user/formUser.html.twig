{% extends "maleteo.html.twig" %}

{% block cuerpo %}
    <form action="{{ path("post_user") }}" method="post">
        <input type="text" name="nombre">
        <input type="text" name="apellido">
        <input type="text" name="edad">
        <input type="submit" value="Enviar">
    </form>

    {% if nombre|default(false) and edad|default(false) and apellido|default(false) %}
        <p>El nombre es: {{ nombre }}</p>
        <p>La edad es: {{ edad }}</p>
        <p>Enlace a usuario : 
            <a href="{{ path("rutaUsuario", 
            {nombre: nombre, apellido:apellido, edad: 0}) }}">
            {{ nombre }}</a></p>
    {% endif %}
    <h2>El apellido es: {{ apellido|default("No existe el apellido") }}</h2>
    <h2>La edad es: {{ edad|default(0) }}</h2>

    {% if usuarios|default(false) %}
    <ul>
        {% for usuario in usuarios %}
            <li>Nombre : {{ usuario.nombre }} {{ usuario.apellido }} </li>
    </ul>
        {% endfor %}
    {% endif %}

{% endblock %}


